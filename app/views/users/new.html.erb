<h1>New User</h1>
<%= form_for(@user) do |f| %>
<div class="field">
<label for="user_name">Name</label><br>
<%= f.text_field :name %>
</div>

<div class="field">
<label for="user_height">Height (in inches)</label><br>
<%= f.number_field :height %>
</div>

<div class="field">
<label for="user_happiness">How happy are you? (1-5 scale)</label><br>
<%= f.number_field :happiness %>
</div>

<div class="field">
<label for="user_nausea">How nauseous are you? (1-5 scale)</label><br>
<%= f.number_field :nausea %>
</div>

<div class="field">
<label for="user_tickets">How many dollars are in your pocket?</label><br>
<%= f.number_field :tickets %>
</div>

<div class="field">
<label for="user_password">Password</label><br>
<%= f.password_field :password %>
</div>

<div class="field">
<label for="user_admin">Check box if you are a theme park owner</label>
<%= f.check_box :admin %>
</div>

<div class="actions">
<%= f.submit "Create User" %>
</div>
<% end %>
