<h1>Listing attractions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>
    <tr>
      <td><strong>Picture</strong></td>
      <td><strong>Name</strong></td>
      <td><strong>Tickets</strong></td>
      <td><strong>Details</strong></td>
    </tr>
    <% @attractions.each do |attraction| %>
    <tr>
      <td><img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" width="100"></td>
      <td> <%= attraction.name %> </td>
      <td> <%= attraction.tickets %> </td>
      <% if admin? %>
      <td> <%= link_to "Show #{attraction.name}", attraction_path(attraction) %> </td>
      <% else %>
      <td> <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %> </td>
      <% end %>
    </tr>
    <% end %>
    </tbody>
</table>
<br>

<p><a href="/attractions/new">New Attraction</a></p>
